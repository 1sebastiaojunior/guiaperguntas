<%- include ('./partials/header.ejs') %>
<body>
    <%- include ('./partials/navbar.ejs') %>
    
    <div class="container">
        <hr>
        <h1>Responder</h1>
        <hr>
        <div class="card">
            <div class="card-body">
                <h2><%= pergunta.title %></h2>
                <p><%= pergunta.description %></p>
                <hr>
                <form method="POST" action="/responder">
                    <h3>Responda</h3>
                    <label>Resposta</label>
                    <textarea placeholder="Digie sua resposta" class="form-control" name="corpo"></textarea> 
                    <br>
                    <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                    <button type="submit" class="btn btn-primary">Responder</button>
                </form>
            </div>
        </div>
        <br>
        <% respostas.forEach(resposta => { %>
            <div class="card">
                <div class="card-body">
                    <h3>Resposta</h3><hr>
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
            <br>
        <% }) %>
    </div>

</body>
<%- include ('./partials/footer.ejs') %>
</html>